<section class="users-section">
  <ul class="users-list">
    <%= render @users %>
  </ul>
</section>


<br/><br/>



  <h2> friends</h2>
  <% @friends.each do |friend|%>
    <%= friend.name %><br/>
  <% end%>


<br/><br/>

<h2> recieved requests</h2>
<% @friend_requests.each do |friend|%>
  <%= friend.name %><br/>
  <%= link_to 'confirm', confirm_user_path(friend) %>
  # <%= link_to 'destory', deny_user_path(friend) %>
<% end%>


<br/><br/>

<h2> pending requests</h2>
<% @pending_requests.each do |friend|%>
  <%= friend.name %><br/>
<% end%>

